---
export interface Props {
    options: Array<string>,
    selected: string,
}

const { options, selected } = Astro.props as Props;
---

<style>
    .navbar {
        display: flex;
        flex-direction: row;
        justify-content: center;
        flex-wrap: wrap;
        font-size: x-large;
        width: 100%;
        margin-top: 0;
        background-color: #f5f5f5;
        top: 0;
        position: fixed;
    }

    .nav-item {
        text-decoration: none;
        margin: 1rem;
        color: #000
    }

    .nav-item:hover {
        color: gray
    }

    .selected {
        font-weight: 600
    }
</style>

<div class="navbar">
    {options.map((opt) => (
    <a href={`/${opt}`} class={`nav-item ${selected===opt ? "selected" : "" }`}>
        {opt}
    </a>
    ))}
</div>