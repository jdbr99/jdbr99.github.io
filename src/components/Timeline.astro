---
export interface Props {
    title: string
}

const { title } = Astro.props as Props;
---

<style>
    .timeline {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: justify;
        width: 60%;
    }

    @media(max-width: 1000px) {
        .timeline {
            width: 100%;
        }
    }

    .title {
        width: 100%;
        text-align: left;
    }
</style>
<div class="timeline">
    <h2 class="title">{title}</h2>
    <slot />
</div>